{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm",
    "Issuer": "DataPipelineAPI",
    "Audience": "DataPipelineClient",
    "ExpirationMinutes": 240
  },
  "Kafka": {
    "BootstrapServers": "kafka-broker-1:29001,kafka-broker-2:29002",
    "RequestTopic": "ai-pipeline-request",
    "ResponseTopic": "ai-pipeline-response",
    "GroupId": "datapipeline-consumer-group"
  },
  "Hadoop": {
    "NameNodeUrl": "http://hadoop-namenode:9870",
    "WebHdfsUrl": "http://hadoop-namenode:9870/webhdfs/v1",
    "CsvDataPath": "/user/datapipeline/uploads/csv",
    "JsonDataPath": "/user/datapipeline/uploads/json",
    "XmlDataPath": "/user/datapipeline/uploads/xml"
  }
}
